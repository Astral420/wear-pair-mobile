<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">0dp</item>

    </style>

    <style name="CategoryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:background">@drawable/category_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>



</resources>